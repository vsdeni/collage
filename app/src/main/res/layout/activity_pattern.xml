<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <me.itchallenges.collageapp.collage.CollageLayout
        android:id="@+id/collage_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        app:columns="10"
        app:spacing="1dp" />

    <TextView
        android:id="@+id/no_pattern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/collage_preview"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/error_no_patterns"
        android:textSize="18sp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/patterns_picker"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/collage_preview"
        android:layout_margin="1dp"
        android:background="@color/gray" />

</RelativeLayout>